{
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "globals": {
    "web3": true,
    "assert": true,
    "artifacts": true,
    "describe": true,
    "contract": true,
    "it": true,
  },
  "plugins": [
    "babel",
    "mocha"
  ],
  "rules": {
    "no-alert"             : 0,
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"]
  },
  "env": {
      "mocha": true,
      "node": true
  }
}
